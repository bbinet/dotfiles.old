verbose on
multiuser on
vbell on
startup_message off
defscrollback 10000
activity "Activity in %t(%n)"
# detach automatically when hangup
autodetach on
shelltitle ""
hardstatus alwayslastline
hardstatus string '%{gk}[%{G}%H%{g}][%= %{wk}%?%-Lw%?%{=b kR} (%{W}%n*%f%t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}][%{=b}%{C}%m/%d %c%{= g}]%{W}'
#shell -$SHELL
altscreen on
